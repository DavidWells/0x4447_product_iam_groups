{
	"IAMGroupViewers": {
		"Type": "AWS::IAM::Group",
        "Description": "Read only mode for the full account, useful for AWS account review by 3th party contractors.",
		"Properties": {
			"GroupName": "Viewers",
			"Policies": [
				{
					"PolicyName": "default",
					"PolicyDocument": {
						"Version": "2012-10-17",
						"Statement": [
							{
								"Effect": "Allow",
								"Action": "*",
								"Resource": "*"
							}
						]
					}
				}
			]
		}
	}
}
